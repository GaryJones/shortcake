{
    "name": "wp-shortcake/Shortcake",
    "description": "Shortcake makes using WordPress shortcodes a piece of cake.",
    "type": "wordpress-plugin",
    "license": "GPL-2.0+",
    "homepage": "https://github.com/wp-shortcake/Shortcake",
    "support": {
      "issues": "https://bitbucket.org/wp-shortcake/shortcake/issues"
    },
    "authors": [
      {
        "name": "Fusion",
        "email": "tech@fusion.net",
        "homepage": "http://fusion.net"
      }
    ],
    "require": {
      "composer/installers": "^1.0"
    },
    "require-dev": {
      "wp-coding-standards/wpcs": "dev-develop"
    },
    "scripts": {
      "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs",
      "post-update-cmd" : "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
    }
}

